{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active folder",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "*.c",
                "-o",
                "${fileDirname}/a.out",
                "-Wall",
                "-Werror",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Generade Doxygen Docs",
            "command": "doxygen",
            "args": [
                "Doxyfile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}